---
import Layout from "../layouts/Layout.astro";
import Modal from "../components/Modal.astro";
import DropdownMenu from "../components/DropdownMenu.astro";

import { serverFetch } from "../utils/api";

// API_URL handled by serverFetch

let standards = [];
let error = null;

try {
  const response = await serverFetch(Astro, "/api/standards");
  if (response.ok) {
    standards = await response.json();
  } else {
    error = "Failed to fetch standards";
  }
} catch (e) {
  error = "API connection failed";
}
---

<Layout title="Standards - Allware Wiki">
  <div class="pt-6 md:pt-8 pb-16 min-h-screen px-4 md:px-6">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div
        class="mb-8 md:mb-12 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4"
      >
        <div>
          <h1 class="text-3xl md:text-5xl font-bold text-gradient mb-2 md:mb-4">
            Standards
          </h1>
          <p class="text-base md:text-xl text-slate-400">
            Manage your compliance frameworks and standards
          </p>
        </div>
        <button
          id="openCreateModal"
          class="btn-primary w-full sm:w-auto active:scale-95 transition-transform"
        >
          <svg
            class="w-5 h-5 inline-block mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 4v16m8-8H4"></path>
          </svg>
          Add New Standard
        </button>
      </div>

      {
        error ? (
          <div class="glass-card p-6 md:p-8 border-red-500/50">
            <div class="flex items-center space-x-3">
              <svg
                class="w-6 h-6 text-red-400 flex-shrink-0"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
              <span class="text-red-400">{error}</span>
            </div>
          </div>
        ) : (
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
            {standards.map((standard: any) => (
              <a
                href={`/standards/${standard.id}`}
                class="glass-card p-4 md:p-6 hover:scale-105 transition-transform duration-300 active:scale-100 cursor-pointer block relative"
              >
                <div class="flex items-start justify-between mb-3 md:mb-4">
                  <div class="w-10 h-10 md:w-12 md:h-12 bg-gradient-to-br from-purple-600 to-blue-600 rounded-lg flex items-center justify-center">
                    <svg
                      class="w-5 h-5 md:w-6 md:h-6 text-white"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                      />
                    </svg>
                  </div>
                  <div class="flex items-center gap-2">
                    <span class="badge badge-success text-xs">
                      {standard.version || "v1.0"}
                    </span>
                    <DropdownMenu
                      itemId={standard.id}
                      itemType="standard"
                      onDelete="deleteStandard"
                    />
                  </div>
                </div>

                <h3 class="text-lg md:text-xl font-bold mb-2">
                  {standard.name}
                </h3>
                <p class="text-slate-400 text-sm mb-3 md:mb-4 line-clamp-2">
                  {standard.description || "No description available"}
                </p>

                <div class="flex items-center justify-between pt-3 md:pt-4 border-t border-slate-700">
                  <span class="text-xs text-slate-500">
                    {standard.createdAt
                      ? new Date(standard.createdAt * 1000).toLocaleDateString()
                      : "N/A"}
                  </span>
                  <span class="text-purple-400 text-xs md:text-sm font-medium">
                    View Details →
                  </span>
                </div>
              </a>
            ))}

            {standards.length === 0 && !error && (
              <div class="col-span-full glass-card p-8 md:p-12 text-center">
                <svg
                  class="w-12 h-12 md:w-16 md:h-16 text-slate-600 mx-auto mb-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                  />
                </svg>
                <h3 class="text-lg md:text-xl font-semibold text-slate-400 mb-2">
                  No standards found
                </h3>
                <p class="text-slate-500 mb-6">
                  Create your first standard to get started
                </p>
                <button
                  id="emptyStateBtn"
                  class="btn-primary active:scale-95 transition-transform"
                >
                  Create First Standard
                </button>
              </div>
            )}
          </div>
        )
      }
    </div>
  </div>

  <!-- Create Standard Modal -->
  <Modal id="createStandardModal" title="Create New Standard" size="md">
    <form id="createStandardForm" class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-slate-300 mb-1">
          Standard Name *
        </label>
        <input
          type="text"
          name="name"
          required
          class="input-field"
          placeholder="e.g., ISO 27001:2022"
        />
      </div>

      <div>
        <label class="block text-sm font-medium text-slate-300 mb-1">
          Description
        </label>
        <textarea
          name="description"
          rows="3"
          class="input-field"
          placeholder="Brief description of the standard"></textarea>
      </div>

      <div>
        <label class="block text-sm font-medium text-slate-300 mb-1">
          Version
        </label>
        <input
          type="text"
          name="version"
          class="input-field"
          placeholder="e.g., v2022"
        />
      </div>

      <div class="flex justify-end space-x-3 pt-4">
        <button
          type="button"
          id="cancelBtn"
          class="btn-secondary active:scale-95 transition-transform"
        >
          Cancel
        </button>
        <button
          type="submit"
          class="btn-primary active:scale-95 transition-transform"
        >
          Create Standard
        </button>
      </div>
    </form>
  </Modal>

  <!-- Toast notification -->
  <div
    id="toast"
    class="fixed bottom-4 right-4 bg-slate-800 border border-slate-700 rounded-lg shadow-xl px-4 py-3 transform translate-y-20 opacity-0 transition-all duration-300 z-50"
  >
    <div class="flex items-center gap-3">
      <span id="toast-icon" class="text-xl">✅</span>
      <span id="toast-message" class="text-sm text-slate-200"
        >Operation successful</span
      >
    </div>
  </div>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
  const API_URL = "http://localhost:3000";

  // Toast helper
  function showToast(message: string, icon = "✅") {
    const toast = document.getElementById("toast");
    const toastMessage = document.getElementById("toast-message");
    const toastIcon = document.getElementById("toast-icon");

    if (toast && toastMessage && toastIcon) {
      toastMessage.textContent = message;
      toastIcon.textContent = icon;
      toast.classList.remove("translate-y-20", "opacity-0");

      setTimeout(() => {
        toast.classList.add("translate-y-20", "opacity-0");
      }, 3000);
    }
  }

  // Open modal handlers
  function openModal() {
    const openModalFn = (window as any).openModal_createStandardModal;
    if (typeof openModalFn === "function") {
      openModalFn();
    } else {
      showToast("Modal not available", "❌");
    }
  }

  const openBtn = document.getElementById("openCreateModal");
  openBtn?.addEventListener("click", openModal);

  const emptyBtn = document.getElementById("emptyStateBtn");
  emptyBtn?.addEventListener("click", openModal);

  // Cancel button
  const cancelBtn = document.getElementById("cancelBtn");
  cancelBtn?.addEventListener("click", () => {
    const closeModalFn = (window as any).closeModal_createStandardModal;
    if (typeof closeModalFn === "function") {
      closeModalFn();
    }
  });

  // Delete standard
  (window as any).deleteStandard = async (id: string) => {
    if (
      !confirm(
        "Are you sure you want to delete this standard? This action cannot be undone.",
      )
    ) {
      return;
    }

    try {
      const response = await fetch(`${API_URL}/api/standards/${id}`, {
        method: "DELETE",
      });

      if (response.ok) {
        showToast("Standard deleted successfully", "✅");
        setTimeout(() => window.location.reload(), 1000);
      } else {
        const err = await response.json();
        showToast(err.error || "Failed to delete standard", "❌");
      }
    } catch (error) {
      console.error("Error:", error);
      showToast("Connection error", "❌");
    }
  };

  // Form submit
  const form = document.getElementById("createStandardForm") as HTMLFormElement;
  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    const submitBtn = form.querySelector(
      'button[type="submit"]',
    ) as HTMLButtonElement;
    const originalText = submitBtn?.textContent || "Create Standard";

    if (submitBtn) {
      submitBtn.disabled = true;
      submitBtn.textContent = "Creating...";
    }

    const formData = new FormData(form);
    const data: Record<string, any> = {};

    formData.forEach((value, key) => {
      if (value && value !== "") {
        data[key] = value;
      }
    });

    try {
      const response = await fetch(`${API_URL}/api/standards`, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(data),
      });

      if (response.ok) {
        showToast("Standard created successfully", "✅");
        setTimeout(() => window.location.reload(), 1000);
      } else {
        const err = await response.json();
        showToast(err.error || "Failed to create standard", "❌");
        if (submitBtn) {
          submitBtn.disabled = false;
          submitBtn.textContent = originalText;
        }
      }
    } catch (error) {
      console.error("Error:", error);
      showToast("Connection error", "❌");
      if (submitBtn) {
        submitBtn.disabled = false;
        submitBtn.textContent = originalText;
      }
    }
  });
</script>
